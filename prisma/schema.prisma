generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  location  String

  // Define 1-to-many relation from Camera to Incident
  incidents Incident[] @relation(name: "CameraIncidents")
}

model Incident {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  cameraId   String   @db.ObjectId

  // Match the same relation name used in Camera
  camera     Camera   @relation(name: "CameraIncidents", fields: [cameraId], references: [id])

  type       String?
  tsStart    DateTime
  tsEnd      DateTime?   // âœ… Made optional to prevent crash on null
  thumbnail  String
  resolved   Boolean  @default(false)
}
