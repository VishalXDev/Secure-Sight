generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Camera {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  location  String

  // ✅ Explicit relation name
  incidents Incident[] @relation(name: "CameraIncidents")
}

model Incident {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  cameraId   String   @db.ObjectId

  // ✅ Match relation name exactly, define fields + references
  camera     Camera   @relation(name: "CameraIncidents", fields: [cameraId], references: [id])

  type       String?
  tsStart    DateTime
  tsEnd      DateTime
  thumbnail  String
  resolved   Boolean  @default(false)
}
